modules = ["c-clang14", "nodejs-20", "python-3.11"]
[agent]
expertMode = true
integrations = ["web_scraper:1.0.0"]
[nix]
channel = "stable-25_05"
packages = ["chromedriver", "chromium", "geckodriver", "xcodebuild", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Application"

[[workflows.workflow]]
name = "Run Application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 5000

[deployment]
deploymentTarget = "autoscale"
run = ["python", "main.py"]
